{
  "manifest_version": 3,
  "name": "Arises Extension",
  "description": "manifest.json description",
  "version": "0.0.0",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": [
    "identity",
    "identity.email",
    "storage",
    "tabs",
    "scripting"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "oauth.html",
        "oauth.js"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ],
  "host_permissions": [
    "*://*/*",
    "*://*.google.com/*",
    "http://localhost/*"
  ],
  "side_panel": {
    "default_path": "views/sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Arises",
    "default_popup": "popup.html"
  },
  "externally_connectable": {
    "matches": [
      "https://arises.vercel.app//*"
    ]
  },
  "commands": {
    "wxt:reload-extension": {
      "description": "Reload the extension during development",
      "suggested_key": {
        "default": "Alt+R"
      }
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval' http://localhost:3000; object-src 'self';",
    "sandbox": "script-src 'self' 'unsafe-inline' 'unsafe-eval' http://localhost:3000; sandbox allow-scripts allow-forms allow-popups allow-modals; child-src 'self';"
  }
}